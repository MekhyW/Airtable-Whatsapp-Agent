# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG
API_V1_STR=/api/v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/airtable_whatsapp_agent
REDIS_URL=redis://localhost:6379/0

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.1

# WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_WEBHOOK_URL=https://your-domain.com/api/v1/webhooks/whatsapp
WHATSAPP_API_VERSION=v18.0

# Airtable Configuration
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_EVENTBRIDGE_BUS_NAME=airtable-whatsapp-agent-events
AWS_ECS_CLUSTER_NAME=airtable-whatsapp-agent-cluster
AWS_ECR_REPOSITORY_URI=123456789012.dkr.ecr.us-east-1.amazonaws.com/airtable-whatsapp-agent

# Security Configuration
RATE_LIMIT_PER_MINUTE=60
CORS_ORIGINS=["http://localhost:3000", "https://your-domain.com"]

# MCP Server Configuration (External Public Servers)
MCP_AIRTABLE_SERVER_URL=http://airtable-mcp:8000
MCP_WHATSAPP_SERVER_URL=http://whatsapp-mcp:8001
MCP_TIMEOUT_SECONDS=30
MCP_MAX_RETRIES=3
MCP_RETRY_DELAY=1.0

# External MCP Server Authentication (if required)
MCP_AIRTABLE_API_KEY=${AIRTABLE_API_KEY}
MCP_WHATSAPP_ACCESS_TOKEN=${WHATSAPP_ACCESS_TOKEN}

# Monitoring and Observability
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus_multiproc_dir
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# Development Settings
RELOAD=true
WORKERS=1
HOST=0.0.0.0
PORT=8000